<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TB2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink2</item>
        <item name="colorPrimaryVariant">@color/pink2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink2</item>
        <item name="colorSecondaryVariant">@color/pink2</item>
        <item name="colorOnSecondary">@color/pink2</item>
        <item name="font">@font/poppins</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/pink2</item>
        <item name="colorPrimaryVariant">@color/pink2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink2</item>
        <item name="colorSecondaryVariant">@color/pink2</item>
        <item name="colorOnSecondary">@color/pink2</item>
        <item name="font">@font/poppins</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tema1" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/pink2</item>
        <item name="colorPrimaryDark">@color/pink2</item>
        <item name="colorAccent">@color/pink2</item>
        <item name="colorSecondary">@color/pink2</item>
        <item name="colorSecondaryVariant">@color/pink2</item>
        <item name="colorOnSecondary">@color/pink2</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="body8">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">9sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.TB2.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>